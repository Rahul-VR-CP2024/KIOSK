<Page x:Class="Exchange.Pages.wContact"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exchange.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080"
      Title="wContact">


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="463*"/>
            <ColumnDefinition Width="270*"/>
        </Grid.ColumnDefinitions>




        <!--<Border CornerRadius="10" Grid.ColumnSpan="3">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#7be9f6" Offset="0.0"/>
                    <GradientStop Color="#f083da" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>-->



        <StackPanel Grid.Column="1" VerticalAlignment="Center" Height="762">



            <TextBlock Text="Contact Us"
            FontWeight="Light"
            FontFamily="helvetica"
            FontSize="50"
            Foreground="White"
            x:Name="contuslbl"
            Margin="0,40,0,0"
            HorizontalAlignment="Center"/>

            <StackPanel Margin="0,50,0,0">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBox FontFamily="Helvetica"
                    FontWeight="Regular"
                    Text="Name"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    Foreground="White"
                    Background="Transparent"
                    BorderThickness="0"
                    Width="235"
                    HorizontalContentAlignment="Left"
                    Opacity="0.5"
                    Height="25"
                    Margin="0,0,0,0"
                    x:Name="usernameTextBox"
                             
                    />
                    

                    </StackPanel>
                <Border Width="250"
    Height="2"
    Background="#1BFFFE"
    Opacity="0.5"/>

            </StackPanel>
            <StackPanel Margin="0,20,0,0">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBox FontFamily="Helvetica"
                FontWeight="Regular"
                Text="Phone Number"
                FontSize="20"
                HorizontalAlignment="Center"
                Foreground="White"
                Background="Transparent"
                BorderThickness="0"
                Width="235"
                HorizontalContentAlignment="Left"
                Opacity="0.5"
                Height="25"
                Margin="0,0,0,0"
                             x:Name="phonenolbl"
                />


                </StackPanel>
                <Border Width="250"
Height="2"
Background="#1BFFFE"
Opacity="0.5"/>

            </StackPanel>
            <StackPanel Margin="0,20,0,0">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBox FontFamily="Helvetica"
                FontWeight="Regular"
                Text="Email"
                FontSize="20"
                HorizontalAlignment="Center"
                Foreground="White"
                Background="Transparent"
                BorderThickness="0"
                Width="235"
                HorizontalContentAlignment="Left"
                Opacity="0.5"
                Height="25"
                Margin="0,0,0,0"
                             x:Name="emaillbl"
                />


                </StackPanel>
                <Border Width="250"
Height="2"
Background="#1BFFFE"
Opacity="0.5"/>

            </StackPanel>
            <StackPanel Margin="0,20,0,0">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBox FontFamily="Helvetica"
                FontWeight="Regular"
                Text="Subject"
                FontSize="20"
                HorizontalAlignment="Center"
                Foreground="White"
                Background="Transparent"
                BorderThickness="0"
                Width="235"
                HorizontalContentAlignment="Left"
                Opacity="0.5"
                Height="25"
                Margin="0,0,0,0"
                             x:Name="subjelbl"
                />


                </StackPanel>
                <Border Width="250"
Height="2"
Background="#1BFFFE"
Opacity="0.5"/>

            </StackPanel>
            <StackPanel Margin="0,20,0,0">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBox FontFamily="Helvetica"
                FontWeight="Regular"
                Text="Message"
                FontSize="20"
                HorizontalAlignment="Center"
                Foreground="White"
                Background="Transparent"
                BorderThickness="0"
                Width="235"
                HorizontalContentAlignment="Left"
                Opacity="0.5"
                Margin="0,0,0,0"
                Height="150"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Auto"
                             x:Name="messagelbl"
                />


                </StackPanel>
                <Border Width="250"
Height="2"
Background="#1BFFFE"
Opacity="0.5"/>

            </StackPanel>

            <Button Content="Submit" Width="250" Height="70" BorderThickness="0" Margin="0,50,0,0"  Foreground="#10358e" FontSize="30" Click="LoginButton_Click" x:Name="submitlbl" >
                <Button.Background>
                    <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFFF " Offset="0"/>
                        <GradientStop Color="#FFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Resources>


                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"></Setter>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <StackPanel HorizontalAlignment="Right" Margin="0,0,0,935">
                <Button Content="Back" Width="200" Height="70" BorderThickness="0" Margin="0,50,50,0"  Foreground="#10358e" FontSize="30" Click="LoginButton_Click" x:Name="backbtn">
                    <Button.Background>
                        <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FFFF " Offset="0"/>
                            <GradientStop Color="#FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Resources>


                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>












    </Grid>
</Page>
