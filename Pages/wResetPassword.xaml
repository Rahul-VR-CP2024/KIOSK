<Page x:Class="Exchange.Pages.wResetPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exchange.Pages"
      mc:Ignorable="d" 
       d:DesignHeight="1920" d:DesignWidth="1000"
Loaded="Page_Load"
      Title="wResetPassword">


    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>

            </Grid.RowDefinitions>




            <StackPanel HorizontalAlignment="Right" Margin="0,0,0,0">
                <Button Content="Back" Width="200" Height="70" BorderThickness="0" Margin="0,50,50,0"  Foreground="#10358e" FontSize="30" Click="backButton_Click" >
                    <Button.Background>
                        <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FFFF " Offset="0"/>
                            <GradientStop Color="#FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Resources>


                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>



            <StackPanel  Grid.Row="0"  VerticalAlignment="Center" Grid.RowSpan="2">
                <Image Source="/Images/wallstreetwhite.jpeg" Width="400" Height="150"/>



                <StackPanel x:Name="enterusernamescreen">
                <TextBlock Text="Reset Password"
                        FontWeight="Light"
                           TextDecorations="Underline"
                        FontFamily="helvetica"
                        FontSize="50"
                        Foreground="White"
                           Margin="0,100,0,100"
                        HorizontalAlignment="Center"/>


                    <StackPanel x:Name="enterusernamearea">
                    <Label Content="Kindly Enter Your Username" FontSize="25" Foreground="White" Width="380" Margin="100,0,50,50" x:Name="usernamelbl"/>
                    <StackPanel Orientation="Horizontal" Width="350">
                        <TextBox FontFamily="Helvetica"
                          FontWeight="Light"
                          Text=""
                          FontSize="25"
                          HorizontalAlignment="Center"
                          
                          Foreground="White"
                          Background="Transparent"
                          BorderThickness="2"
                          BorderBrush="White"
                                
                          HorizontalContentAlignment="Center"
                          Opacity="0.5"
                          Height="35"
                          Width="350"
                          Margin="0,0,0,0"
                          x:Name="usernametxt"
                          />

                    </StackPanel>
                    </StackPanel>
                    <StackPanel x:Name="securityquestionpanel" Visibility="Visible">
                         
                            <Label Content="Answer Your Security Question" FontSize="25" Foreground="White" Width="380" Margin="100,0,50,50" x:Name="securityquestion"/>
                            <StackPanel Orientation="Horizontal" Width="500">
                                <ComboBox FontFamily="Helvetica"
FontWeight="Medium"
FontSize="25"
HorizontalAlignment="Left"
Foreground="Black"
Background="White"
BorderThickness="0"
Width="500"
HorizontalContentAlignment="Left"
Opacity="0.5"
Height="30"
Margin="0,0,0,0"
Padding="20,0,0,0"
                              SelectionChanged="questionsListselectionchanged"
                              x:Name="questionsList"
                              
                SelectedIndex="0">
                                    <ComboBox.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="10"/>
                                        </Style>
                                    </ComboBox.Resources>
                                    <!-- Sample ComboBox Items -->
                                    <ComboBoxItem Content="" />
                                </ComboBox>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Width="350" Margin="0,50,0,0">
                                <TextBox FontFamily="Helvetica"
      FontWeight="Light"
      Text=""
      FontSize="25"
      HorizontalAlignment="Center"
      
      Foreground="White"
      Background="Transparent"
      BorderThickness="2"
      BorderBrush="White"
            
      HorizontalContentAlignment="Center"
      Opacity="0.5"
      Height="35"
      Width="350"
      Margin="0,0,0,0"
      x:Name="securityansweer"
      />

                            </StackPanel>
                        </StackPanel>
                        <!--<Border Width="350"
                     Height="2"
                     Background="White"
                     Opacity="0.5"/>-->



                    <!--<StackPanel Orientation="Horizontal" Margin="0,50,0,0" Width="350">
                        <TextBox FontFamily="Helvetica"
                          FontWeight="Light"
                          Text="Mobile Number"
                          FontSize="25"
                          HorizontalAlignment="Center"
                          Foreground="White"
                          Background="Transparent"
                          BorderThickness="0"
                          GotFocus="mobile_GotFocus"
                          LostFocus="mobile_LostFocus"
                          HorizontalContentAlignment="Center"
                          Opacity="0.5"
                          Height="35"
                          Width="350"
                          Margin="0,0,0,0"
                          x:Name="mobileTextBox"
                              />

                    </StackPanel>
                    <Border Width="350"
                     Height="2"
                     Background="White"
                     Opacity="0.5"/>-->


                    <StackPanel Orientation="Horizontal" Margin="0,150,0,0" HorizontalAlignment="Center">
                        <Button Width="300" Height="70" Content="Proceed" Margin="0,0,0,0" Click="proceedtosecurityquestion" FontSize="30">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="Navy"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="20">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!--<Button Width="100" Height="40" Content="REGISTER" Click="RegisterButton_Click"/>-->
                    </StackPanel>

              

                </StackPanel>
            </StackPanel>









        </Grid>
    </Grid>
</Page>
