<Page x:Class="Exchange.Pages.wSelectcountry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exchange.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080"
       Loaded="Page_Loaded"
      Title="wSelectcountry">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="463*"/>
            <ColumnDefinition Width="270*"/>
        </Grid.ColumnDefinitions>




        <!--<Border CornerRadius="10" Grid.ColumnSpan="3">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="#7be9f6" Offset="0.0"/>
                <GradientStop Color="#f083da" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        </Border>-->



        <StackPanel Grid.ColumnSpan="3" VerticalAlignment="Center" Height="1600">



            <TextBlock Text="Country"
FontWeight="Light"
FontFamily="helvetica"
FontSize="35"
Foreground="White"
        x:Name="countrytitle"
Margin="0,40,0,0"
HorizontalAlignment="Center"/>


            <StackPanel Margin="0,50,0,0">

                <Grid Width="700" Height="1400">
                    <ListView Name="countryListView" ScrollViewer.CanContentScroll="True" SelectionChanged="countryListView_SelectionChanged" Background="{x:Null}" BorderBrush="{x:Null}" Margin="-40,0,-103,0" FontSize="20" Foreground="White">
                        <ListView.View>
                            <GridView>
                                <!--<GridViewColumn Header="Country" Width="100" >
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding FlagImage}" Width="30" Height="20" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>-->

                                <GridViewColumn Header="Name of Country اسم الدولة المرسل اليها" Width="600" DisplayMemberBinding="{Binding Bene}" />

                                <GridViewColumn Header="Select اختار" Width="200" >
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Select اختار" Height="30" BorderThickness="0" Foreground="#10358e" Click="RESEND_Click" Tag="{Binding CountryName}">

                                                <Button.Background>
                                                    <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#FFFF " Offset="0"/>
                                                        <GradientStop Color="#FFFF" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Button.Background>
                                                <Button.Resources>


                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="10"></Setter>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>

                                </GridViewColumn>


                            </GridView>
                        </ListView.View>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Height" Value="50"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Navy"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>



            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <StackPanel HorizontalAlignment="Right" Margin="0,0,0,935">
                <Button Content="Back" Width="200" Height="70" BorderThickness="0" Margin="0,50,50,0"  Foreground="#10358e" FontSize="30" Click="LoginButton_Click" x:Name="backbtn">
                    <Button.Background>
                        <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FFFF " Offset="0"/>
                            <GradientStop Color="#FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Resources>


                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>












    </Grid>
</Page>
