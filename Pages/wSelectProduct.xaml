<Page x:Class="Exchange.Pages.wSelectProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exchange.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080"
      Loaded="ONLOAD"
      Title="wSelectProduct">

    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <!--<Border CornerRadius="10" Grid.ColumnSpan="3" Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#7be9f6" Offset="0.0"/>
                    <GradientStop Color="#f083da" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>-->

        <StackPanel HorizontalAlignment="Right" Margin="0,0,0,0" Grid.Row="0" Grid.Column="3">
            <Button Content="Back" Width="200" Height="70" BorderThickness="0" Margin="0,50,50,0"  Foreground="#10358e" FontSize="30"  Click="backbutton" x:Name="backbtn">
                <Button.Background>
                    <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFFF " Offset="0"/>
                        <GradientStop Color="#FFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Resources>


                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"></Setter>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>



        <StackPanel Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="0,404,0,9" Grid.RowSpan="2" >

            <TextBlock Text="Select Product"
    FontWeight="Light"
    FontFamily="helvetica"
    FontSize="50"
    Foreground="White"
    Margin="0,10,0,50"
                       x:Name="selectproducttitle"
    HorizontalAlignment="Center"/>
            
            
           

            <StackPanel Orientation="Horizontal" Margin="0,100,0,0">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30,0,0,0">
                    <Label Content="Product" FontSize="25" Width="400" Foreground="White" x:Name="productlabel"></Label>
                </StackPanel>
                <StackPanel   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,0">

                    <ComboBox FontFamily="Helvetica"
FontWeight="Medium"
FontSize="25"
HorizontalAlignment="Left"
Foreground="Black"
Background="White"
BorderThickness="0"
Width="600"
HorizontalContentAlignment="Left"
Opacity="0.5"
Height="30"
Margin="0,0,0,0"
Padding="20,0,0,0"
                              SelectionChanged="productselectionchanged"
                              x:Name="productcombo"
                              
                SelectedIndex="1">
                        <ComboBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </ComboBox.Resources>
                        <!-- Sample ComboBox Items -->
                        <ComboBoxItem Content="Japan" />
                        <ComboBoxItem Content="Indian" />
                        <ComboBoxItem Content="China" />
                        <ComboBoxItem Content="Egypt" />
                    </ComboBox>
                </StackPanel>


            </StackPanel>

          
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30,0,0,0">
                    <Label Content="Delivery Type" FontSize="25" Width="400" Foreground="White" x:Name="deliverytypelabel"></Label>
                </StackPanel>
                <StackPanel   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,0">

                    <ComboBox FontFamily="Helvetica"
    FontWeight="Medium"
    FontSize="25"
    HorizontalAlignment="Left"
    Foreground="Black"
    Background="White"
    BorderThickness="0"
    Width="600"
    HorizontalContentAlignment="Left"
    Opacity="0.5"
    Height="30"
    Margin="0,0,0,0"
    Padding="20,0,0,0"
                              x:Name="deliverycombo"
                    SelectedIndex="1">
                        <ComboBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </ComboBox.Resources>
                        <!-- Sample ComboBox Items -->
                        <ComboBoxItem Content="YEN" />
                        <ComboBoxItem Content="INR" />
                        <ComboBoxItem Content="USD" />
                        <ComboBoxItem Content="PHP" />
                    </ComboBox>
                </StackPanel>


            </StackPanel>

            <StackPanel Margin="0,270,0,0">
                <Button Content="Next" Width="321" Height="45" BorderThickness="0" Margin="0,10,0,0"  Foreground="#10358e" FontSize="30" Click="Button_Click" x:Name="nextbtn">
                    <Button.Background>
                        <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="white" Offset="0"/>
                            <GradientStop Color="white" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Resources>


                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>





    </Grid>
</Page>
