<Page x:Class="Exchange.Pages.wtobankorcash"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exchange.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1920" d:DesignWidth="1080"
      Title="wtobankorcash">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="900*"/>
            <ColumnDefinition Width="270*"/>
        </Grid.ColumnDefinitions>




        <!--<Border CornerRadius="10" Grid.ColumnSpan="3">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#7be9f6" Offset="0.0"/>
                    <GradientStop Color="#f083da" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>-->

       

        <StackPanel Grid.Column="1" VerticalAlignment="Center">

           

            <TextBlock Text="Send Money"
               FontWeight="Light"
               FontFamily="helvetica"
               FontSize="50"
               Foreground="White"
               x:Name="sendmontitle"        
               Margin="0,40,0,0"
               HorizontalAlignment="Center"/>

            <StackPanel Margin="0,50,0,0">


                <Button  Width="642" Height="400" BorderThickness="0" Margin="0,10,0,0"  Foreground="#10358e" FontSize="18" Click="transferbtnclick" >
                    <Grid HorizontalAlignment="Center">

                       

                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>


                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <TextBlock  TextWrapping="WrapWithOverflow" FontSize="30" FontWeight="Bold" x:Name="tobp1">To Bank Account</TextBlock>
                            
                            <TextBlock Margin="0,10,0,0" TextWrapping="WrapWithOverflow" FontSize="30" x:Name="tobp2">Online money transfer to your beneficiary.</TextBlock>
                        </StackPanel>
                    </Grid>
                    <Button.Background>
                        <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FFFF " Offset="0"/>
                            <GradientStop Color="#FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Resources>


                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button  Width="642" Height="400" BorderThickness="0" Margin="0,50,0,0"  Foreground="#10358e" FontSize="18" Click="cashbtnclick" >
                    <Grid HorizontalAlignment="Center">



                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>


                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <TextBlock  TextWrapping="WrapWithOverflow" FontSize="30" FontWeight="Bold" x:Name="tocp1">Cash Pick Up</TextBlock>

                            <TextBlock Margin="0,10,0,0" TextWrapping="WrapWithOverflow" FontSize="30" x:Name="tocp2">Receive cash from nearest agent.</TextBlock>
                        </StackPanel>
                    </Grid>
                    <Button.Background>
                        <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FFFF " Offset="0"/>
                            <GradientStop Color="#FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Resources>


                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.ColumnSpan="2">
            <StackPanel HorizontalAlignment="Right" Margin="0,0,0,935">
                <Button Content="Back" Width="200" Height="70" BorderThickness="0" Margin="0,50,50,0"  Foreground="#10358e" FontSize="30" Click="LoginButton_Click" x:Name="backbtn" >
                    <Button.Background>
                        <LinearGradientBrush  StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FFFF " Offset="0"/>
                            <GradientStop Color="#FFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Resources>


                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"></Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>

       










    </Grid>
</Page>
